    "description": "A Rocket.chat Monolog Handler meant to be used in Laravel projects developed by Sysvale Softgroup",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Esron Dtamar",
            "email": "esron.dtamar@gmail.com"
        },
        {
            "name": "Gustavo Lemes Saraiva",
            "email" : "gustavolemes2@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.0",
        "monolog/monolog": "^2.0",
        "guzzlehttp/guzzle": "^7.0",
        "illuminate/support": "^8.40"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3"
    },
    "autoload": {
        "psr-4": {
            "Drugovich\\Logging\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}
